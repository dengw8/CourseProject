<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_bg1">

    <LinearLayout
        android:id="@+id/user1"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#856495ED"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/user1_imag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_person_add_blue_grey_800_36dp" />

        <TextView
            android:id="@+id/user1_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#85B0C4DE"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/user2"
        android:orientation="horizontal"
        android:background="#85009688"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user2_text"
            android:layout_weight="5"
            android:padding="20dp"
            android:textSize="18sp"
            android:background="#85FFA07A"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user2_imag"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_person_add_blue_grey_800_36dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/battle_btn"
        android:background="#00796B"
        android:text="开始PK"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:elevation="15dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>